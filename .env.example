# ============================================
# AI Influencer Pipeline - Variables d'environnement
# ============================================
# Copier ce fichier en .env et remplir les valeurs

# ============================================
# Base de données
# ============================================
# Pour Docker Compose (PostgreSQL local)
# DATABASE_URL="postgresql://influencer:your_db_password@db:5432/influencer_pipeline?schema=public"
# DB_PASSWORD="your_secure_db_password"

# Pour Vercel/Neon (PostgreSQL cloud)
DATABASE_URL="postgresql://user:password@ep-xxx.eu-central-1.aws.neon.tech/neondb?sslmode=require"

# ============================================
# APIs externes
# ============================================
# Apify (scraping Instagram)
APIFY_API_KEY=""

# Google AI / Gemini (description + génération)
GOOGLE_AI_API_KEY=""

# Wavespeed (génération alternative, optionnel)
WAVESPEED_API_KEY=""

# ============================================
# Instagram Graph API (publication automatique)
# ============================================
# Créer une app sur https://developers.facebook.com
# Permissions requises: instagram_basic, instagram_content_publish
INSTAGRAM_APP_ID=""
INSTAGRAM_APP_SECRET=""

# Clé de chiffrement pour les tokens Instagram (32 bytes hex)
# Générer avec: openssl rand -hex 32
ENCRYPTION_KEY=""

# ============================================
# Authentification
# ============================================
# Mot de passe pour accéder à l'application
APP_PASSWORD="votre-mot-de-passe-secret"

# Clé secrète pour signer les cookies (min 32 caractères)
# Générer avec: openssl rand -base64 32
APP_SECRET="une-cle-secrete-aleatoire-de-32-caracteres-min"

# ============================================
# Cron Jobs
# ============================================
# Secret pour sécuriser les endpoints cron (optionnel)
# Générer avec: openssl rand -hex 16
CRON_SECRET=""

# ============================================
# Déploiement
# ============================================
# URL publique de l'application
# Requis pour: Wavespeed, Instagram publication
# Ex: https://influencer.example.com
NEXT_PUBLIC_APP_URL=""

# Domaine pour Caddy (sans https://, pour Docker uniquement)
DOMAIN="influencer.example.com"

# Port (optionnel, défaut 3000)
PORT=3000
